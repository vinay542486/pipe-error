pipeline {
    agent any
    parameters {
  choice(name: 'stage', choices: ['build','deploy','testing'], description: 'stages to build')
}
    stages {
        stage('Build') {
            steps {
                git 'https://github.com/vinay542486/javarepo.git'
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh '''
                        #!/bin/bash 
                        pwd 
                        ls
                        echo "This is a BUILD stage"
                        sleep 5
                    '''
                    if[$? == 0] ;then
                    echo "param.stage == deploy"
                    else 
                    echo "param.stage == testing"
                }     
            }
        }

        stage('DEPLOY') {
            steps {
                echo "This is a DEPLOY stage"
                sh 'sleep 5'
            }
        }
        stage('testing') {
            steps {
                echo "this is testing stage"
                }
         }
    } 
}
